<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<%= link_to "New Upload", new_upload_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Download Link</th>
      <th>Remove File</th>
      <th>Reprocess File</th>
    </tr>
  </thead>
  <tbody>
    <% @uploads.each do |upload| %>
      <tr>
        <td><%= upload.name %></td>
        <td><%= link_to "Download File", upload.attachment_url %></td>
        <td><%= button_to "Delete",  upload, method: :delete, class: "btn btn-danger",
          data: { confirm: 'Are you sure that you wish to delete #{upload.name}?' } %></td>
        <td><%= button_to "Show",  upload, method: :show, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
